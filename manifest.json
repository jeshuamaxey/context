{
  "name": "Context",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Context makes reading any Wikipedia article easier and more rewarding.",
  "homepage_url": "http://jeshua.co",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "permissions": [
    "tabs",
    "*://*.wikipedia.org/*"
    ],
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/wiki/*"],
      "css": ["src/inject/inject.css"],
      "js": ["js/jquery/jquery.js", "src/inject/inject.js"]
    }
  ]
}